@model Supplier
@{
}
<div class="card card-primary card-outline">
    <div class="card-body">
        <form action="~/Supplier/Save" method="post">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />
            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input class="form-control" type="text" name="@nameof(Model.SupplierName)" value="@Model.SupplierName" />
                @Html.ValidationMessage(nameof(Model.SupplierName))
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input class="form-control" type="text" name="@nameof(Model.ContactName)" value="@Model.ContactName" />
                @Html.ValidationMessage(nameof(Model.ContactName))
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input class="form-control" type="tel" name="@nameof(Model.Phone)" value="@Model.Phone" />
                @Html.ValidationMessage(nameof(Model.Phone))
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input class="form-control" type="email" name="@nameof(Model.Email)" value="@Model.Email" />
                @Html.ValidationMessage(nameof(Model.Email))
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input class="form-control" type="text" name="@nameof(Model.Address)" value="@Model.Address" />
                @Html.ValidationMessage(nameof(Model.Address))
            </div>

            <div class="form-group">
                <label>Tỉnh/thành:</label>
                <select class="custom-select select2" name="@nameof(Model.Province)">
                    <option value="">----- Chọn Tỉnh/thành -----</option>
                    @foreach(var province in CommonDataService.ListOfProvinces())
                    {
                        if (province.ProvinceName == Model.Province)
                        {
                            <option selected value="@province.ProvinceName">@province.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@province.ProvinceName">@province.ProvinceName</option>
                        }
                    }
                </select>
                @Html.ValidationMessage(nameof(Model.Province))
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    <span>Lưu dữ liệu</span>
                </button>
                <a href="~/Supplier" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>
