@model SV21T1020547.Web.Models.SupplierSearchResult
@{
    Layout = null;
}

<p style="margin: 10px 0;">
    Có <b>@Model.RowCount</b> nhà cung cấp trong tổng số <b>@Model.PageCount</b> trang
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead class="bg-primary">
            <tr>
                <th>Tên nhà cung cấp</th>
                <th>Tên giao dịch</th>
                <th>Điện thoại</th>
                <th>Email</th>
                <th>Địa chỉ</th>
                <th>Tỉnh thành</th>
                <th style="width: 80px;"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Data.Count() > 0)
            {
                @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.SupplierName</td>
                    <td>@item.ContactName</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Province</td>
                    <td class="text-right">
                        <a href="~/Supplier/Edit/@item.SupplierID" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Supplier/Delete/@item.SupplierID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-center" colspan="7">Không tìm thấy dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@{
    await Html.RenderPartialAsync("_Pagination");
}