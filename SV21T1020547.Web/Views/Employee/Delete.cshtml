@model Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}
<div class="card card-danger card-outline">
    <div class="card-body">
        <form method="post" action="">
            <div class="form-group row">
                <label class="col-label-form col-sm-2 text-right">Họ và tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FullName</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-label-form col-sm-2 text-right">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.BirthDate?.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-label-form col-sm-2 text-right">Địa chỉ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Address</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-label-form col-sm-2 text-right">Điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-label-form col-sm-2 text-right">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-label-form col-sm-2 text-right">Trạng thái:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@(Model.IsWorking ? "Đang làm việc" : "Đã nghỉ việc")</p>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-lg-2 col-sm-10">
                    <img id="Photo"
                         src="@StaticResources.GetUserAvatarPath(Model.Photo)"
                         class="img-circle img-bordered @(Model.IsWorking ? "border-primary" : "")"
                         style="width:200px; height: 200px; object-fit: cover;">
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-lg-2 col-sm-10">
                    @if (!CommonDataService.InUsedEmployee(Model.EmployeeID))
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                            <span>Xác nhận xóa</span>
                        </button>
                    }
                    <a href="~/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

