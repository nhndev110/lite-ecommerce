@model Customer
@{
}
<div class="card card-primary card-outline">
    <div class="card-body">
        <form action="~/Customer/Save" method="post">
            <input type="hidden" name="@nameof(Model.CustomerID)" value="@Model.CustomerID" />

            <div class="form-group">
                <label>Tên khách hàng:</label>
                <input class="form-control"
                       autofocus
                       value="@Model.CustomerName"
                       name="@nameof(Model.CustomerName)" />
                @Html.ValidationMessage(nameof(Model.CustomerName))
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input class="form-control"
                       value="@Model.ContactName"
                       name="@nameof(Model.ContactName)" />
                @Html.ValidationMessage(nameof(Model.ContactName))
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input class="form-control" type="tel" name="@nameof(Model.Phone)" value="@Model.Phone" />
                @Html.ValidationMessage(nameof(Model.Phone))
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input class="form-control" type="email" name="@nameof(Model.Email)" value="@Model.Email" />
                @Html.ValidationMessage(nameof(Model.Email))
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input class="form-control" type="text" name="@nameof(Model.Address)" value="@Model.Address" />
                @Html.ValidationMessage(nameof(Model.Address))
            </div>

            <div class="form-group">
                <label>Tỉnh/thành:</label>
                <select class="custom-select select2" name="@nameof(Model.Province)">
                    <option>----- Chọn Tỉnh/thành -----</option>
                    @foreach (var item in SV21T1020547.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }
                </select>
                @Html.ValidationMessage(nameof(Model.Province))
            </div>

            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input"
                           id="is-locked"
                           type="checkbox"
                           name="@nameof(Model.IsLocked)"
                           value="true" @(Model.IsLocked ? "checked" : "") />
                    <label class="custom-control-label" for="is-locked">Tài khoản đang bị khóa</label>
                </div>
            </div>

            <div class="form-group text-right">
                <button href="" type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    <span>Lưu dữ liệu</span>
                </button>
                <a href="~/Customer" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>