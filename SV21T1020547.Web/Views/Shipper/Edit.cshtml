@model Shipper
@{
}
<div class="card card-primary card-outline">
    <div class="card-body">
        <form action="~/Shipper/Save" method="post">
            <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID" />
            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <input class="form-control" type="text" name="@nameof(Model.ShipperName)" value="@Model.ShipperName" />
                @Html.ValidationMessage(nameof(Model.ShipperName))
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input class="form-control" type="tel" name="@nameof(Model.Phone)" value="@Model.Phone" />
                @Html.ValidationMessage(nameof(Model.Phone))
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    <span>Lưu dữ liệu</span>
                </button>
                <a href="~/Shipper" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>