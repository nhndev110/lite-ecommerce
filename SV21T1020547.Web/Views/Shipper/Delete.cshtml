@model Shipper
@{
    ViewBag.Title = "Xóa Người giao hàng";
}
<div class="card card-danger card-outline">
    <div class="card-body">
        <form action="~/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <p class="form-control-static">@Model.ShipperName</p>
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <p class="form-control-static">@Model.Phone</p>
            </div>

            <div class="form-group text-right">
                @if(!CommonDataService.InUsedShipper(Model.ShipperID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                        <span>Xóa dữ liệu</span>
                    </button>
                }
                <a href="~/Shipper" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>