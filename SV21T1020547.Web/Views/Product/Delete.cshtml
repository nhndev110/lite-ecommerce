@model Product
@{
    ViewBag.Title = "Xóa mặt hàng";
}
<div class="card card-danger card-outline">
    <div class="card-body">
        <form action="~/Product/Delete/@Model.ProductID" method="post">
            <div class="form-group row">
                <label class="col-label-form col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.ProductName</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-label-form col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.ProductDescription</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-label-form col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Unit</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-label-form col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Price</p>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-lg-2 col-sm-10">
                    <img id="Photo" src="~/images/@(string.IsNullOrWhiteSpace(Model.Photo) ? "no-image.jpg" : $"products/{Model.Photo}")" class="img img-bordered" style="width:200px" />
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-lg-2 col-sm-10">
                    @if(!ProductDataService.InUsedProduct(Model.ProductID))
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                            <span>Xác nhận xóa</span>
                        </button>
                    }
                    <a class="btn btn-default" href="~/Product">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
